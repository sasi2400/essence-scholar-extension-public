{
  "manifest_version": 3,
  "name": "Essence Scholar",
  "version": "1.6.0",
  "description": "Uncover the essence of every study! AI-powered insights tailored to your academic interests in economics & social sciences.",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:8080/*",
    "https://*.a.run.app/*",
    "https://*.ssrn.com/*",
    "file:///*.pdf"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.ssrn.com/*",
        "file:///*.pdf",
        "http://*/*.pdf",
        "https://*/*.pdf"
      ],
      "js": ["shared-id-generator.js", "content.js"],
      "css": ["styles.css"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "pdf.min.js",
        "pdf.worker.min.js",
        "pdf-init.js",
        "fullpage.html",
        "fullpage.js",
        "onboarding.html",
        "onboarding.js",
        "marked.min.js",
        "marked-init.js",
        "shared-id-generator.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
