{
  "manifest_version": 3,
  "name": "Essence Scholar",
  "version": "1.7.0",
  "description": "Uncover the essence of every study! AI-powered insights tailored to your academic interests in economics & social sciences.",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "storage",
    "webRequest",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>",
    "file:///*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "id": "pdf-collector",
      "js": ["pdf-collector.js"],
      "matches": ["<all_urls>"],
      "run_at": "document_idle",
      "world": "ISOLATED"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "pdf.min.js",
        "pdf.worker.min.js",
        "pdf-init.js",
        "fullpage.html",
        "fullpage.js",
        "onboarding.html",
        "onboarding.js",
        "marked.min.js",
        "marked-init.js",
        "shared-id-generator.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
